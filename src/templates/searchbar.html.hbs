<button type="button" class="btn-nav fa fa-chevron-left" {{action "history" -1}}></button>
<button type="button" class="btn-nav fa fa-chevron-right" {{action "history" 1}}></button>
<button type="button" class="btn-nav fa fa-refresh" {{action "refresh"}}></button>
{{input type="search" placeholder="Search" value=query required=true action="submit"}}
<button type="button" class="btn-small btn-context-valid fa fa-times" {{action "clear"}}></button>
<button type="button" class="btn-small btn-context-valid fa fa-search" {{action "submit"}}></button>
<button type="button" class="btn-small btn-dropdown fa fa-chevron-down" {{action "toggleDropdown"}}></button>
<div class="searchbar-dropdown {{unless showDropdown 'hidden'}}">
<section class="filters">
<div>Filter results</div>
{{radio-buttons content=filters value=filter buttonName="searchfilters"}}
</section>
{{#if model.length}}
<section class="recent">
<header>
<div>Recent queries</div>
<div class="clear" {{action "clearHistory"}}><i class="fa fa-trash-o"></i></div>
</header>
<ul class="list-unstyled">
{{#with updateFormattedTime as _}}
{{#each history in arrangedContent}}
<li {{action "searchHistory" history}}>
<div class="filter">{{history.label}}</div>
<div class="query">{{history.query}}</div>
<div class="date">{{time-from-now history.date false}}</div>
</li>
{{/each}}
{{/with}}
</ul>
</section>
{{/if}}
</div>