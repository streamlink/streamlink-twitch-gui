{{#modal-dialog}}
	{{#modal-header}}
		Please confirm
	{{/modal-header}}
	{{#modal-body}}
		Do you want to apply your changes?
	{{/modal-body}}
	{{#modal-footer}}
		{{#form-button action="apply"   class="btn-success" icon="fa-check"   iconanim=true}}Apply{{/form-button}}
		{{#form-button action="discard" class="btn-danger"  icon="fa-trash-o" iconanim=true}}Discard{{/form-button}}
		{{#form-button action="cancel"  class="btn-neutral" icon="fa-times"                }}Cancel{{/form-button}}
	{{/modal-footer}}
{{/modal-dialog}}