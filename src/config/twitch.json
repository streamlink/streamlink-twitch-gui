{
	"stream-url": "twitch.tv/{channel}",
	"channel-url": "https://twitch.tv/{channel}",
	"chat-url": {
		"default": "https://www.twitch.tv/popout/{channel}/chat",
		"popout": "https://www.twitch.tv/popout/{channel}/chat",
		"embed": "https://www.twitch.tv/embed/{channel}/chat"
	},
	"emotes-url": "https://twitchemotes.com/channels/{id}",
	"subscription": {
		"create-url": "https://www.twitch.tv/{channel}/subscribe"
	},
	"oauth": {
		"server-port": 65432,
		"base-uri": "https://id.twitch.tv/oauth2/authorize?response_type=token&client_id={client-id}&redirect_uri={redirect-uri}&scope={scope}&force_verify=true&state={state}",
		"client-id": "phiay4sq36lfv9zu7cbqwz2ndnesfd8",
		"redirect-uri": "http://localhost:{server-port}/redirect",
		"scope": [
			"user:manage:blocked_users",
			"user:read:blocked_users",
			"user:read:follows",
			"user:read:subscriptions",
			"chat:edit",
			"chat:read",
			"whispers:edit",
			"whispers:read"
		]
	}
}
