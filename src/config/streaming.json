{
	"default-provider": "streamlink",
	"download-url": {
		"streamlink": "https://streamlink.github.io/install.html"
	},
	"docs-url": {
		"streamlink": "https://streamlink.github.io/cli.html#cmdoption{item}"
	},
	"validation": {
		"timeout": 10000,
		"providers": {
			"streamlink": {
				"version": "2.4.0",
				"regexp": "^(?:python\\d*-)?streamlink(?:w?\\.exe|-script\\.pyw?)? (\\d+\\.\\d+\\.\\d+)(?:$|[\\s+-].*)"
			}
		}
	},
	"providers": {
		"streamlink": {
			"type": "streamlink",
			"name": "Streamlink",
			"label": "Streamlink",
			"exec": {
				"win32": "streamlinkw.exe",
				"darwin": "streamlink",
				"linux": "streamlink"
			},
			"fallback": {
				"win32": [
					"%PROGRAMFILES%\\Streamlink\\bin",
					"%PROGRAMFILES(X86)%\\Streamlink\\bin"
				],
				"darwin": [
					"/usr/local/bin",
					"/usr/bin",
					"/Library/Frameworks/Python.framework/Versions/Current/bin"
				],
				"linux": [
					"/usr/local/bin",
					"/usr/bin"
				]
			}
		},
		"streamlink-python": {
			"type": "streamlink",
			"name": "Streamlink",
			"label": "Streamlink (Python)",
			"python": ">=3.6",
			"exec": {
				"win32": "pythonw.exe",
				"darwin": "python",
				"linux": "python"
			},
			"fallback": {
				"win32": [
					"%PROGRAMFILES%\\Streamlink\\Python",
					"%PROGRAMFILES(X86)%\\Streamlink\\Python"
				],
				"darwin": [
					"/usr/local/bin",
					"/usr/bin",
					"/Library/Frameworks/Python.framework/Versions/Current/bin"
				],
				"linux": [
					"/usr/local/bin",
					"/usr/bin"
				]
			},
			"pythonscript": {
				"win32": "streamlink-script.py",
				"darwin": "streamlink",
				"linux": "streamlink"
			},
			"pythonscriptfallback": {
				"win32": [
					"%PROGRAMFILES%\\Streamlink\\bin",
					"%PROGRAMFILES(X86)%\\Streamlink\\bin"
				],
				"darwin": [
					"/usr/local/bin",
					"/usr/bin",
					"/Library/Frameworks/Python.framework/Versions/Current/bin"
				],
				"linux": [
					"/usr/local/bin",
					"/usr/bin"
				]
			}
		}
	}
}
